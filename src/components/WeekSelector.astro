---
import type { Language } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Week {
  id: string;
  label: string;
  labelEn: string;
  isCurrent: boolean;
  isPast: boolean;
}

interface Props {
  weeks: Week[];
  currentWeekId: string;  // The selected week (from URL or default)
  lang: Language;
  basePath?: string;  // Base path for week URLs (e.g., "/hafta" or "/en/week")
}

const { weeks, currentWeekId, lang, basePath } = Astro.props;

// Find indices
const selectedIndex = weeks.findIndex(w => w.id === currentWeekId);
const actualCurrentIndex = weeks.findIndex(w => w.isCurrent);
const isOnCurrentWeek = selectedIndex === actualCurrentIndex;

// Get previous and next week info
const prevWeek = selectedIndex > 0 ? weeks[selectedIndex - 1] : null;
const nextWeek = selectedIndex < weeks.length - 1 ? weeks[selectedIndex + 1] : null;
const selectedWeek = weeks[selectedIndex];
const actualCurrentWeek = weeks[actualCurrentIndex];

// Helper to generate week URL
function getWeekUrl(week: Week | null): string {
  if (!week) return '#';
  
  // If it's the current week, link to the home page
  if (week.isCurrent) {
    return lang === 'tr' ? '/' : '/en';
  }
  
  // Use path-based URL if basePath is provided
  if (basePath) {
    return `${basePath}/${week.id}`;
  }
  
  // Fallback to query params (for backwards compatibility)
  return `?week=${week.id}`;
}

// URL for "current week" link
const currentWeekUrl = lang === 'tr' ? '/' : '/en';

// Determine arrow direction for "current week" link
// If viewing a past week (selectedIndex < actualCurrentIndex), arrow points right →
// If viewing a future week (selectedIndex > actualCurrentIndex), arrow points left ←
const currentWeekIsAhead = selectedIndex < actualCurrentIndex;
---

<nav class="week-selector mb-8" aria-label={t(lang, 'calendar.selectWeek')}>
  <div class="flex flex-col items-center gap-3">
    
    <!-- Main navigation row -->
    <div class="flex items-center justify-center gap-4 w-full max-w-md">
      <!-- Previous week arrow (LEFT pointing Penrose triangle) -->
      {prevWeek ? (
        <a 
          href={getWeekUrl(prevWeek)}
          class="week-arrow penrose-arrow"
          aria-label={t(lang, 'calendar.previousWeek')}
        >
          <svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg" class="penrose-svg">
            <defs>
              <clipPath id="clip-prev">
                <path d="M330,100 L290,120 L290,300 L30,170 L30,210 L330,360 Z"/>
              </clipPath>
            </defs>
            <g transform="translate(400,0) scale(-1,1)">
              <path fill="#0A0A0A" d="m70 360v-260l180 90 40-20-260-130v300z"/>
              <path fill="white" d="m70 100l40 20v180l260-130v40l-300 150z"/>
              <path fill="#C74B9B" d="m110 260l180-90-260-130 40-20 300 150-260 130z"/>
            </g>
            <g clip-path="url(#clip-prev)">
              <path d="M330,100 L290,120 L290,300 L30,170 L30,210 L330,360 Z" fill="none" stroke="#C74B9B" stroke-width="8"/>
            </g>
          </svg>
        </a>
      ) : (
        <span class="week-arrow penrose-arrow week-arrow-disabled" aria-hidden="true">
          <svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg" class="penrose-svg">
            <g transform="translate(400,0) scale(-1,1)">
              <path fill="#ccc" d="m70 360v-260l180 90 40-20-260-130v300z"/>
              <path fill="#f5f5f5" d="m70 100l40 20v180l260-130v40l-300 150z"/>
              <path fill="#ddd" d="m110 260l180-90-260-130 40-20 300 150-260 130z"/>
            </g>
          </svg>
        </span>
      )}
      
      <!-- Current week display -->
      <div class="flex-1 text-center">
        <h2 class="week-display text-xl sm:text-2xl font-serif font-medium text-text">
          {lang === 'tr' ? selectedWeek?.label : selectedWeek?.labelEn}
        </h2>
      </div>
      
      <!-- Next week arrow (RIGHT pointing Penrose triangle) -->
      {nextWeek ? (
        <a 
          href={getWeekUrl(nextWeek)}
          class="week-arrow penrose-arrow"
          aria-label={t(lang, 'calendar.nextWeek')}
        >
          <svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg" class="penrose-svg">
            <defs>
              <clipPath id="clip-next">
                <path d="m70 100l40 20v180l260-130v40l-300 150z"/>
              </clipPath>
            </defs>
            <path fill="#0A0A0A" d="m70 360v-260l180 90 40-20-260-130v300z"/>
            <path fill="white" d="m70 100l40 20v180l260-130v40l-300 150z"/>
            <path fill="#C74B9B" d="m110 260l180-90-260-130 40-20 300 150-260 130z"/>
            <g clip-path="url(#clip-next)">
              <path d="m70 100l40 20v180l260-130v40l-300 150z" fill="none" stroke="#C74B9B" stroke-width="8"/>
            </g>
          </svg>
        </a>
      ) : (
        <span class="week-arrow penrose-arrow week-arrow-disabled" aria-hidden="true">
          <svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg" class="penrose-svg">
            <path fill="#ccc" d="m70 360v-260l180 90 40-20-260-130v300z"/>
            <path fill="#f5f5f5" d="m70 100l40 20v180l260-130v40l-300 150z"/>
            <path fill="#ddd" d="m110 260l180-90-260-130 40-20 300 150-260 130z"/>
          </svg>
        </span>
      )}
    </div>
    
    <!-- "Current week" return link (only shown when not on current week) -->
    <!-- Arrow points toward current week: right if current is in future, left if in past -->
    {!isOnCurrentWeek && (
      <a 
        href={currentWeekUrl}
        class="current-week-link text-sm text-cereyan-pink hover:text-cereyan-pink-dark transition-colors flex items-center gap-1"
      >
        {currentWeekIsAhead ? (
          <>
            <span>{t(lang, 'calendar.thisWeek')}</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </>
        ) : (
          <>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>{t(lang, 'calendar.thisWeek')}</span>
          </>
        )}
      </a>
    )}
    
  </div>
</nav>

<style>
  .week-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
    cursor: pointer;
    transition: transform 0.15s ease-out;
  }
  
  .penrose-arrow {
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    border-radius: 0;
  }
  
  .penrose-svg {
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  a.week-arrow:hover {
    transform: scale(1.1);
  }
  
  a.week-arrow:active {
    transform: scale(0.95);
  }
  
  .week-arrow-disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }
  
  .week-display {
    min-width: 180px;
  }
  
  .current-week-link {
    font-weight: 500;
  }
  
  .current-week-link svg {
    pointer-events: none;
  }
</style>
