---
import type { Language } from '../i18n/translations';
import { t, getLocalizedPath } from '../i18n/translations';
import LanguageToggle from './LanguageToggle.astro';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const navItems = [
  { key: 'nav.calendar' as const, path: '/', pathEn: '/' },
  { key: 'nav.venues' as const, path: '/mekanlar', pathEn: '/venues' },
];

function getNavPath(item: typeof navItems[0]): string {
  const basePath = lang === 'en' ? item.pathEn : item.path;
  return getLocalizedPath(lang, basePath);
}
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-border shadow-sm">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 sm:h-20">
      <!-- Logo -->
      <a href={getLocalizedPath(lang, '/')} class="flex items-center gap-3 group">
        <img 
          src="/logo.svg" 
          alt="Cereyan logo" 
          class="w-10 h-10 sm:w-12 sm:h-12"
        />
        <div class="flex flex-col">
          <span class="font-display font-bold text-lg sm:text-xl tracking-widest text-text group-hover:text-cereyan-pink transition-colors">
            CEREYAN
          </span>
          <span class="hidden sm:block text-[10px] tracking-widest uppercase text-text-muted">
            {t(lang, 'site.subtitle')}
          </span>
        </div>
      </a>

      <!-- Navigation -->
      <nav class="flex items-center gap-2 sm:gap-6">
        {navItems.map((item) => (
          <a 
            href={getNavPath(item)}
            class="text-sm font-medium text-text-muted hover:text-cereyan-pink transition-colors"
          >
            {t(lang, item.key)}
          </a>
        ))}
        
        <div class="w-px h-5 bg-border hidden sm:block"></div>
        
        <LanguageToggle lang={lang} />
        
        <div class="w-px h-5 bg-border hidden sm:block"></div>
        
        <!-- Social links -->
        <div class="flex items-center gap-3">
          <a 
            href="https://cereyan.substack.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-text-muted hover:text-cereyan-pink transition-colors"
            title="Substack"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/>
            </svg>
          </a>
          
          <a 
            href="https://instagram.com/cereyanistanbul" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-text-muted hover:text-cereyan-pink transition-colors"
            title="Instagram"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
