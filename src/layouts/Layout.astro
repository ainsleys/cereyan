---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { Language } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  title?: string;
  lang?: Language;
}

const { title, lang = 'tr' } = Astro.props;
const pageTitle = title ? `${title} | Cereyan` : 'Cereyan - İstanbul Film Takvimi';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={lang === 'tr' ? 'İstanbul\'da bağımsız ve sanat sineması gösterimleri takvimi' : 'Calendar of independent and art cinema screenings in Istanbul'} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
    
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header lang={lang} />
    
    <main class="flex-1 w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
    
    <Footer lang={lang} />
  </body>
</html>

